@model RecipeBook.Web.Models.SearchViewModel

@using (Ajax.BeginForm("SearchByIngredient", new AjaxOptions { UpdateTargetId = "result" }))
{
    @Html.AntiForgeryToken()

    <div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p>
            Recipe name
           
            @Html.TextBoxFor(model => model.RecipeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RecipeName, "", new { @class = "text-danger" })
            <hr />
        </p>
        <p>
            Category
            
            @Html.TextBoxFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            <hr />
        </p>
        <p>
            Ingredient
            
            @Html.TextBoxFor(model => model.IngredientName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IngredientName, "", new { @class = "text-danger" })
            <hr />
        </p>
      
        <input type="submit" value="Search" class="btn btn-default" />
        <hr />
    </div>

}
