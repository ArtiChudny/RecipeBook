
@{
    ViewBag.Title = "Editor";
    var ajaxOptions = new AjaxOptions { UpdateTargetId = "results" };
}

<div class="col-md-2">
    <p><h3>EditorPanel</h3></p>
    <ul class="list-group">
        <li class="list-group-item">
            @Ajax.ActionLink("Categories", "CategoriesList", ajaxOptions)
        </li>
        <li class="list-group-item">
            @Ajax.ActionLink("Recipes", "RecipesList", ajaxOptions)
        </li>
        <li class="list-group-item">
            @Ajax.ActionLink("Ingredients", "IngredientsList", ajaxOptions)
        </li>
    </ul>
</div>


<div class="col-md-6 col-md-offset-1" id="results">
    @{if (ViewBag.Id == 1)
        {
            @Html.Action("CategoriesList")         
        }
        if (ViewBag.Id == 2 || ViewBag.Id==null)
        {
            @Html.Action("RecipesList")         
        }
        if (ViewBag.Id == 3)
        {
            @Html.Action("IngredientsList")
        }
    }
</div>
@section Scripts
{
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}