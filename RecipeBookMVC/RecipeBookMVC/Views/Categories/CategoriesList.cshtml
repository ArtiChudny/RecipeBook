@model IEnumerable<RecipeBook.Common.Models.Category>

@{
    var ajaxOptions = new AjaxOptions { UpdateTargetId = "mainPage" };
}

<ul class="list-group">
    @Ajax.ActionLink("All recipes", "RecipeList", "Home", new { id = 0 }, ajaxOptions, new { @class = "list-group-item active" })

    @foreach (var category in Model)
    {
        @Ajax.ActionLink(category.CategoryName, "RecipeList","Home", new { id = category.CategoryId }, ajaxOptions, new { @class = "list-group-item"})
    }
</ul>

